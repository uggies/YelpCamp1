<% layout('./layouts/boilerplate') %> 

<link rel="stylesheet" href="/stylesheets/app.css">

<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<ul>
    <% for (let camp of campgrounds) { %>
        <div class="card mb-3">
            <div class="row g-0"> 
                <div class="col-md-4">
                    <% if (camp.images.length ) { %>
                        <img class="img-fluid" src="<%= camp.images[0].url %>" alt="..." height="300px">
                    <% } else { %>
                        <img class="img-fluid" src="https://res.cloudinary.com/dyyuj2cq2/image/upload/v1618980511/YelpCamp/epui58s8vhcdqvudj2mu.jpg" alt="...">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text"><small class="text-muted"><%= camp.location %></small></p> 
                        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>    
</ul>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}; 
</script>

<script src="/javascripts/clusterMap.js"></script>
